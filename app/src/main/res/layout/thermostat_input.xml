<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="2">

    <TextView
        android:id="@+id/textThermostatDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:labelFor="@+id/editTextThermostatDay"
        android:text="@string/thermostatDay" />

    <TextView
        android:id="@+id/textThermostatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:labelFor="@+id/editTextThermostatTime"
        android:text="@string/thermostatTime" />

    <TextView
        android:id="@+id/textThermostatTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:labelFor="@+id/editTextThermostatTemperature"
        android:text="@string/thermostatTemperature" />


    <EditText
        android:id="@+id/editTextThermostatDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="6"
        android:inputType="date" />

    <EditText
        android:id="@+id/editTextThermostatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="6"
        android:inputType="time" />

    <EditText
        android:id="@+id/editTextThermostatTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="6"
        android:inputType="numberSigned" />

</GridLayout>